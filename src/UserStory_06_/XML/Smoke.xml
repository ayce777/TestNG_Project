            <class name="UserStory_06_.LogoToHomepageTest">
                <methods>
                    <include name="testTechnoStudyLogo"/>
                    <include name="testLogoRedirectsToHomepage"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
